<html lang="en">
<%- include("./partials/head.ejs") %>

    <body>
        <%- include("./partials/nav.ejs") %>
            <div>
                <form action="http://localhost:<%=port%>/brains/refresh" method="POST">
                    <button> Reload Brains</button>
                </form>
            </div>
            <div class="blogs content">
                <h2>All Bots</h2>
                <% if (bots.length> 0) { %>
                    <% bots.forEach(bot=> { %>
                        <a class="single" href="/bots/<%= bot._id %>">
                            <h3 class="name">
                                <%= bot.name %>
                            </h3>
                            <% if(bot.status) {%>
                                <h3>Status : Online</h3>
                                <% } else { %>
                                <h3>Status : Offline</h3>
                                    <% } %>
                            <p class="snippet">
                            </p>
                        </a>
                        <% }) %>
                            <% } else { %>
                                <p>There are no bot. Please create one</p>
                                <% } %>
            </div>

    </body>

</html>