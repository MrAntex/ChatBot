<html lang="en">
<%- include("./partials/head.ejs") %>
    <body>
        <%- include("./partials/nav.ejs") %>
            <div class="create-blog content">
                <form action="/bots/edit/<%= bot._id %>" method="POST">
                    <label for="name" >Bot name:</label>
                    <input type="text" placeholder="<%= bot.name %>" value="<%= bot.name %>" id="name" name="name" required>
                    <label for="port">Port number:</label>
                    <input type="text" placeholder="<%= bot.port %>" value="<%= bot.port %>" id="port" name="port" required>
                    <label for="discord_access">Discord Access:</label>
                    <select name="discord_access" id="discord_access">
                        <option value="true">true</option>
                        <option value="false">false</option>
                    </select>
                    <br> 
                    <button>Edit</button>
                </form>
            </div>
    </body>

</html>